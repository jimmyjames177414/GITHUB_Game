<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    x:Class="GITHUB_Game.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:blazor="clr-namespace:Microsoft.AspNetCore.Components.WebView.Maui;assembly=Microsoft.AspNetCore.Components.WebView.Maui"
    xmlns:local="clr-namespace:GITHUB_Game">

    <!--
        The BlazorWebView control hosts your Blazor components inside the native
        MAUI application.  The HostPage property points at your HTML entry point
        under wwwroot and the RootComponent defines which Razor component should
        render at the element specified by Selector.
    -->
    <blazor:BlazorWebView HostPage="wwwroot/index.html">
        <blazor:BlazorWebView.RootComponents>
            <blazor:RootComponent Selector="#app" ComponentType="{x:Type local:Main}" />
        </blazor:BlazorWebView.RootComponents>
    </blazor:BlazorWebView>

</ContentPage>
